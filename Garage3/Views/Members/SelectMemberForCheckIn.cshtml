@model IEnumerable<Garage3.Models.Member>

@{
    ViewData["Title"] = "Select which member to check in a vehicle for";
}
<br />
<h2>Select a member (+18 years) to check in a vehicle </h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Register membership</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="SelectVehicleForCheckIn" asp-route-id="@item.Id">Park registered vehicle</a>
                </td>
            </tr>
        }
    </tbody>
</table>